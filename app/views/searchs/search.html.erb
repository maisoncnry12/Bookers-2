<!--検索結果表示画面-->

<div class="body">
  <div class="container">

        <% if @model == "user" %>
          <h2>Users search for "<%= @content %>"</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @records.each do |user| %>
              <tr>
               <td>
                <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
               </td>
               <td><%= user.name %></td>
               <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        <% else %>
          <h2>Books search for "<%= @content %>"</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @records.each do |book| %>
             <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
              </td>
              <td><%= book.title %></td>
              <td><%= link_to "Show", book_path(book.id) %></td>
              <td></td>
             </tr>
            <% end %>
            </tbody>
          </table>
        <% end %>
  </div>
</div>
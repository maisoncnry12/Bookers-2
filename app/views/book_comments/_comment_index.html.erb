<% book.book_comments.each do |book_comment| %>
 <tr>
  <td><%= image_tag('no-image-icon') %>
      <%= book_comment.user.name %></td>
  <td><%= book_comment.comment %></td>
  <% if book_comment.user == current_user %>
  <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger",remote: true %></td>
  <% end %>
 </tr>
<% end %>